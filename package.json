{
    "name": "pomodoro-timer",
    "version": "1.0.0",
    "description": "A simple Pomodoro Timer built with Electron",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder"
    },
    "devDependencies": {
      "electron": "^13.1.7",
      "electron-builder": "^25.1.8"
    },
    "author": "Aman Rakesh <amanrakesh309@gmail.com>",
    "homepage": "https://github.com/your-username/pomodoro-timer",
    "license": "MIT",
    "dependencies": {
      "materialize-css": "^1.0.0"
    },
    "build": {
      "appId": "com.amuyo.pomodorotimer",
      "productName": "Pomodoro Timer",
      "directories": {
        "output": "dist"
      },
      "files": [
        "index.html",
        "main.js",
        "node_modules/**/*",
        "package.json",
        "assets/**/*"
      ],
      "linux": {
        "target": [
          "deb",
          "AppImage",
          "snap"
        ]
      }
    }
  }